# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Database Configuration (SQLite by default - no configuration needed)
# The database file will be created at backend/digipath.db
# Uncomment below to use a custom path:
# DATABASE_URL=sqlite:///path/to/your/database.db

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Admin Configuration (used by seed.py)
ADMIN_EMAIL=admin@aiims.edu
ADMIN_PASSWORD=admin123
ADMIN_NAME=System Administrator
